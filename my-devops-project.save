│── Dockerfile
FROM python:3.12-slim

WORKDIR /app

COPY app/app.py.txt .
RUN pip install --no-cache-dir -r app.py.txt

COPY app/ .

EXPOSE 5000

# For dev (Flask’s built-in server)
CMD ["python", "app.py"]
# For production (Gunicorn)
# CMD ["gunicorn", "--bind", "0.0.0.0:5000", "app:app"]
